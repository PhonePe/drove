#!/bin/bash -e

[ -r "/etc/default/drove-controller" ] && . "/etc/default/drove-controller"

JAVA_OPTS=$(sed -e '/^[[:space:]]*\/\//d' -e 's|[[:space:]]*//.*| |' -e 's|^| |' /etc/drove-controller.jvm.conf | tr -d "\n")
JAVA_CMD="java ${JAVA_OPTS} -jar /usr/share/java/drove-controller.jar server /etc/drove-controller.yml"

logger -is "[`date -u +%Y-%m-%dT%T.%3NZ`] Starting drove-controller"
exec ${JAVA_CMD} 2>&1 | tee -a /var/log/drove/drove-controller/init.log
