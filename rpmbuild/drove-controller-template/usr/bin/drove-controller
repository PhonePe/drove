#!/bin/bash -e
CONFIGDIR="/etc"
LIBDIR="/usr/lib64"

[ -r "/etc/default/drove-controller" ] && . "/etc/default/drove-controller"

if [ "$JAVA_HOME" != "" ]; then
  JAVA="$JAVA_HOME/bin/java"
else
  JAVA=java
fi

JAVA_OPTS=$(sed -e '/^[[:space:]]*\/\//d' -e 's|[[:space:]]*//.*| |' -e 's|^| |' ${CONFIGDIR}/drove-controller.jvm.conf | tr -d "\n")
JAVA_CMD="${JAVA} ${JAVA_OPTS} -jar ${LIBDIR}/java/drove-controller.jar server ${CONFIGDIR}/drove-controller.yml"

logger -is "[`date -u +%Y-%m-%dT%T.%3NZ`] Starting drove-controller"
exec ${JAVA_CMD} 2>&1 | tee -a /var/log/drove/drove-controller/init.log
